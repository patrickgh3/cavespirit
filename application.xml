<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="com.patrickgh3.cavespirit" package="com.patrickgh3.cavespirit" version="1.0.0" company="Patrick" />
	
	<!-- output -->
	<app main="Main" file="HaxePunkTest" path="bin" />
	
	<window background="#000000" fps="60" />
	<window width="1024" height="768" unless="mobile" />
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<haxelib name="openfl" />
	<!-- <haxelib name="actuate" /> -->
	
	<!-- assets -->
	<icon path="assets/openfl.svg" />
	<assets path="assets/graphics" rename="gfx" />
	<assets path="assets/font" rename="font" include="*.ttf" />
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
</project>